<div class='container padded-top padded-bottom'>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
    <!-- First row -->

      <%= render "devise/shared/omniauth_providers" %>

      <div class="divider">
        <span class="divider-title">ou</span>
      </div>

      <h3 class="header-smaller text-center">Connectez-vous avec votre adresse email</h3>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "navbar-wagon-button devise-btn-margin" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

