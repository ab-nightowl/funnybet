<% content_for :after_js do %>
  <script>
    var filterizd = $('.filtr-container').filterizr();
  </script>
<% end %>


<div class="container padded">
  <div id="filter-bar">
    <div class="titre">
      Categories
    </div>
    <ul>
      <li><%= link_to "Tous", "#", data: { filter: "all" } %></li>
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, "#", data: { filter: category.id } %></li>
      <% end %>
    </ul>
  </div>
  <div class="filtr-container">
    <% @bets.each do |bet| %>
       <div class="card-box col-md-4 col-sm-6 filtr-item" data-category="<%= bet.category.id %>">

        <div class="card" data-color="orange">
          <div class="content card-content">
            <h4 class="description text-center"><%= bet.title %></h4>
            <div class="btn-center">
              <%= link_to "Je parie", bet_path(bet), class: "btn-treehouse" %>
            </div>
            <div class="filter"></div>
          </div><!-- content -->
          <div class="card-social social-line" data-buttons="3">
            <%= social_share_button_tag(bet.title) %>
          </div><!-- social-line -->
        </div><!-- card -->
       </div>
    <% end %>
  </div>
</div>

